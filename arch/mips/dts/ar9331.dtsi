#include <dt-bindings/clock/ar933x-clk.h>

#include "skeleton.dtsi"

/ {
	soc {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "simple-bus";
		device_type = "soc";
		ranges;

		serial0: serial@18020000 {
			compatible = "qca,ar9330-uart";
			reg = <0x18020000 0x14>;
			clocks = <&ar9331_clk AR933X_CLK_UART>;
			status = "disabled";
		};

		gpio: gpio@18040000 {
			compatible = "qca,ar7100-gpio";
			gpio-controller;
			reg = <0x18040000 0x100>;
			#gpio-cells = <2>;

			ngpios = <30>;
			status = "disabled";
		};

		ar9331_clk: clock {
			compatible = "qca,ar933x-clk";
			reg = <0x18050000 0x48>;
			#clock-cells = <1>;
		};

		spi: spi@1f000000 {
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "qca,ath79-spi";
			reg = <0x1f000000 0x01000000>;
			status = "disabled";
		};

		timer {
			compatible = "mti,r4k-timer";
			clocks = <&ar9331_clk AR933X_CLK_CPU>;
			status = "okay";
		};

		mac0: mac@19000000 {
			compatible = "qca,ar7100-gmac";
			/* драйверу нужен только базовый адрес
				0x19000000 -> GE0 */
			reg = <0x18070000 0x00000100>,
			      <0x19000000 0x01000000>;
			reg-names = "gmac", "ge0";

			/* на первых порах будем работать без mii
				в фиксированной конфигурации */

			phy-mode = "mii";
			status = "disabled";
		};
	};
};
